server {
    listen 80 default_server backlog=2048;

    root /usr/src/app/build;
    index index.html;

    # Make site accessible from http://localhost/
    server_name runs.red;

    location / {
        try_files $uri $uri/ /index.html;
    }
}

upstream maps {
  server 127.0.0.1:18080;
}

server {

  listen 80;
  server_name maps.runs.red;
  location / {
    http://backend;
  }

}
